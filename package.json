{
  "name": "micro-ts",
  "version": "0.1.0",
  "description": "Typescript Node.js backend boilerplate code",
  "license": "Apache-2.0",
  "author": "Akagi201 <akagi201@gmail.com>",
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "sort-package": "sort-package-json",
    "start": "node --experimental-specifier-resolution=node build/src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/yargs": "^17.0.13",
    "dayjs": "^1.11.4",
    "tslib": "^2.4.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.7.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsutils": "^3.21.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 16.14 <17"
  },
  "volta": {
    "node": "16.14.2"
  }
}
